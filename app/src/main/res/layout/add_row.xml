<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">


    <TextView
        android:id="@+id/book_id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="1"
        android:textColor="#000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/book_title_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_title_txt"
        app:layout_constraintVertical_bias="0.735" />

    <TextView
        android:id="@+id/book_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Title 1"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/book_pages_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/book_pages_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/book_author_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="4dp"
        android:text="Author1"
        app:layout_constraintStart_toStartOf="@+id/book_id_txt"
        app:layout_constraintTop_toTopOf="@+id/book_id_txt" />

    <TextView
        android:id="@+id/book_pages_txt"
        android:layout_width="79dp"
        android:layout_height="12dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:text="120"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/book_id_txt"
        app:layout_constraintTop_toTopOf="@+id/book_id_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>